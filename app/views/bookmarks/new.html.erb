<h1>New Category</h1>

<%= form_with model: @category, local: true do |form| %>

  <div>
    <%= form.label :name, "Category Name" %>
    <%= form.text_field :name, placeholder: "Enter category name" %>
  </div>

  <div>
    <%= form.submit "Create Category" %>
  </div>
<% end %>

<div>
  <%= link_to 'Back to Categories', categories_path %>
</div>
